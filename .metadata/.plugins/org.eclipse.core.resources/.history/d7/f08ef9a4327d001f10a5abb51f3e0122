package application;

import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;

import entities.Employee;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		List<Employee> list = new ArrayList<>();
		
		//Part 1 = Identify the users
		System.out.print("Quantos registros você deseja fazer?");
		int N = sc.nextInt();
		
		for(int i=1; i<N; i++) {
			System.out.println();
			System.out.print("Funcionário" + i + ":");
			
			System.out.print("Id: ");
			int id = sc.nextInt();
			while (hasId(list , id)){
				System.out.print("Esse id ja esta cadastrado.Tente novamente: ");
				int NovoId = sc.nextInt();
			}
		
			System.out.print("Nome: ");
			sc.nextLine();
			String name = sc.nextLine();
			System.out.print("Salário: ");
			double salario = sc.nextDouble();
			list.add(new Employee(id, name, salario));
		}

		//Parte 2 = Funcionario que vai receber o aumento
		System.out.println();
		System.out.print("Qual é o id do funcionario ue voce deseja aumentar o salario: ");
		int id = sc.nextInt();
		Employee emp = list.stream().filter(x -> x.getId() == id).findFirst().orElse(null);
		if (emp == null) {
			System.out.println("Esse Id não existe!");
		}
		else {
			System.out.print("Qual é a porcentagm de aumento: ");
			double porcentagem = sc.nextDouble();
			emp.increaseSalary(porcentagem);
		}
		
		//parte 3 Listar os funcionarios
		
		System.out.println();
		System.out.println("Lista dos Funcionarios:");
		for (Employee obj : list) {
			System.out.println(obj);
		}
		
		sc.close();
	}
		public static boolean hasId(List<Employee> list, int id) {
		    return list.stream().anyMatch(x -> x.getId() == id);
		}
		
	}


